<h1>Registering New Product Information</h1>
<h2>On shelf <%= Shelf.find(session[:shelf_id]).aisle%></h2>
<h3>In the <%= Store.find(session[:store_id]).name%></h3>

<%= form_for(@shelf_product_info) do |f| %>
  <% if @shelf_product_info.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shelf_product_info.errors.count, "error") %> prohibited this shelf_product_info from being saved:</h2>

      <ul>
      <% @shelf_product_info.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product %><br />
    <%= f.collection_select :product_id, Store_product_info.all, :id, :product_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', shelf_product_infos_path %>
