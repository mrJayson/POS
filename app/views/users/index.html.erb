<h1>Listing users</h1>
<h2>employed in the <%= Store.find(session[:store_id]).name%></h2>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>User name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <%@users = User.find(:all, :conditions => ["store_id = ?", session[:store_id]])%> 

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.user_name %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

