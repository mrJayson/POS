<h1>Listing Stocks</h1>

<table>
  <tr>
    <th>Location</th>
    <td></td>
    <th>Product</th>
    <td></td>
    <th>Quantity</th>
    <td></td>
    <th>Price</th>
    <th></th>
  </tr>

<% @stocks.each do |stock| %>
  <tr>
    <td><%= stock.location.name %></td>
    <td><%= stock.product.name %></td>
    <td><%= stock.quantity%></td>
    <td><%= stock.price%></td>
  </tr>
<% end %>
</table>

