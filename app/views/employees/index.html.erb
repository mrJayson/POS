<h1>Employees</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Status</th>
    <th></th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= "#{employee.first_name} #{employee.last_name}" %></td>
    <th></th>
    <td><%= employee.status %></td>


    <td><%= link_to 'Show', employee %></td>
    <% if session[:status] == "manager"%>
	    <td><%= link_to 'Edit Account', edit_employee_path(employee) %></td>
		<td><%= link_to 'Change Status', employee_status_path(employee) %></td>
	    <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
  </tr>
<% end %>
</table>

<br />

<% if session[:status] == "manager"%>
	<%= link_to 'New Employee', new_employee_path %></br>
<% end %>

