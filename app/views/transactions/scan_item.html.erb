<h1>Scan new item<h1>
	
	<%= form_for(@transaction) do |f| %>
	  <% if @transaction.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this product from being saved:</h2>

	      <ul>
	      <% @transaction.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field">
	    <%= f.label :product %><br />
	  	<%= f.collection_select :new_item, get_all_products_on_all_shelves(current_store), :id, :name%>
	  </div>
	  <div class="field">
	    <%= f.label :amount %><br />
	  	<%= f.number_field :amount_scanned, :value => 1%>
	  </div>

	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>

<%= link_to 'back', current_transaction%>